{
  "name": "my-electron-app",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish=always"
  },
  "build": {
    "appId": "com.example.my-electron-app",
    "productName": "tb",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/tb.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
  "publish": {
    "provider": "github",
    "owner": "xywang-zju",
    "repo": "tb-native",
    "releaseType": "release" 
  }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A simple Electron application",
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12"
  }
}
